{
  "editor.inlineSuggest.enabled": true,
  "ruby.rubocop.executePath": "/Users/james/bin/",
  "workbench.iconTheme": "vscode-icons",
  "files.autoSave": "afterDelay",
  "terminal.integrated.fontFamily": "Meslo LG M for Powerline",
  "files.trimTrailingWhitespace": true,
  "editor.accessibilitySupport": "off",
  "editor.tabSize": 2,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1",
    "CW_NEW_SESSION": "1",
    "Q_NEW_SESSION": "1"
  },
  "git.autofetch": true,
  "rewrap.wrappingColumn": 85,
  "workbench.startupEditor": "none",
  "redhat.telemetry.enabled": true,
  "jupyter.askForKernelRestart": false,
  "workbench.editor.tabSizing": "fixed",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "markdown.extension.toc.unorderedList.marker": "*",
  "markdown.extension.toc.levels": "2..6",
  "github.copilot.enable": {
    "*": true,
    "scminput": false
  },
  "settingsSync.ignoredSettings": [
    "ruby.rubocop.executePath"
  ],
  "gitlens.views.commitDetails.files.layout": "list",
  // Help for Monaspace fonts: "https://github.com/githubnext/monaspace/blob/main/README.md"
  // "editor.fontFamily": "'Monaspace Krypton', monospace",
  // "editor.fontFamily": "'Monaspace Neon', monospace",
  // "editor.fontLigatures": "'calt', 'liga', 'dlig', 'SS01', 'SS02', 'SS03', 'SS04', 'SS05', 'SS06', 'SS07', 'SS08'",
  "editor.fontFamily": "'Fira Code', monospace",
  "editor.fontLigatures": true,
  // SS01: == === =/= != !== /= /== ~~ =~ !~
  // SS02: <= >=
  // SS03: -> <- => <!-- --> <~ <~~ ~> ~~> <~>
  // SS04: </ /> /\ \/
  // SS05: |> <|
  // SS06: ## ###
  // SS07: *** /* */ /*/ (* *) (*)
  // SS08: .= .- ..<
  // CALT: // /// && !! ?? ?. ?: || :: ::: ;; .. ... =!= #= := =: =:= :> >: <: :< ..= ..-
  // Spaceship: <=>

  "files.exclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  "files.watcherExclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  "xstate.nestTypegenFiles": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "githubPullRequests.pullBranch": "never",
  "github.copilot.editor.enableAutoCompletions": true,
  "vsicons.dontShowNewVersionMessage": true,
  "markdownlint.focusMode": false,
  "markdownlint.lintWorkspaceGlobs": [
    "**/*.{md,mkd,mdwn,mdown,markdown,markdn,mdtxt,mdtext,workbook}",
    "!**/bower_components",
    "!**/node_modules",
    "!**/vendor",
    "!**/.git",
    "!.yardopts"
  ],
  "files.associations": {
    ".yardopts": "plaintext"
  },
  "python.createEnvironment.trigger": "off"
}